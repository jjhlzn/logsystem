<%#encoding:utf-8 %>
<div id="content-main" style="width: 100%">


  <div class="digg_pagination">
    <%= will_paginate @logs %>
  </div>

  <div class="results" id="resultsDiv">
    <table>
      <thead>
      <tr>
        <th>Time</th>
        <th>Thread</th>
        <th>Level</th>
        <th>Class</th>
        <th>Content</th>
      </tr>
      </thead>

      <tbody>
      <% @logs.each do |log| %>
          <tr>
            <td style='width:13%'><%= log.time %></td>
            <td style='width:4%'><%= log.thread %></td>
            <td style='width:4%'><%= log.level %></td>
            <td style='width:17%'><%= log.clazz %></td>
            <td><%= log.content %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="digg_pagination">
    <%= will_paginate @logs %>
  </div>

</div>

